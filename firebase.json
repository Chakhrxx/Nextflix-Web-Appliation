{
  "hosting": {
    "site": "netflix-a80a3",
    "public": "client/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.{png,jpg,jpeg,gif,webp,svg}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "**/*.{mp4,webm,ogg}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "entryPoint": "api",
    "region": "asia-southeast1",
    "memory": "512MiB",
    "timeoutSeconds": 60,
    "concurrency": 80,
    "vpcConnector": "",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "cd functions && npm install",
      "cd functions && npm run build"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  }
}
