{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "entryPoint": "api",
    "region": "asia-southeast1",
    "memory": "512MiB",
    "timeoutSeconds": 60,
    "concurrency": 80,
    "vpcConnector": "",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local",
      "src",
      "public",
      ".vercel",
      ".next",
      ".github",
      ".public"
    ],
    "predeploy": [
      "cd functions && npm install",
      "cd functions && npm run build"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  }
}
